.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部信息 */
.header {
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

/* 信息卡片和选择卡片 */
.info-card, .selection-card {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 20rpx;
}

.info-header {
  padding: 0 10rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.info-body {
  padding: 20rpx 10rpx;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  width: 180rpx;
  font-size: 28rpx;
  color: #666;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 选择区块标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 8rpx solid #409eff;
}

/* 日期选择器 */
.date-picker-wrapper {
  padding: 20rpx 10rpx;
}

.date-picker {
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
}

.date-picker text {
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  width: 32rpx;
  height: 32rpx;
}

/* 时间选择器 */
.time-picker-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 10rpx;
}

.time-picker-item {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.time-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  padding-left: 10rpx;
}

.time-picker {
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
}

.time-picker text {
  font-size: 28rpx;
  color: #333;
}

.time-separator {
  width: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

/* 时长显示 */
.duration-display {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
  border-top: 1rpx dashed #eee;
  margin-top: 10rpx;
}

.duration-text {
  font-size: 28rpx;
  color: #666;
}

.duration-value {
  font-size: 28rpx;
  color: #409eff;
  font-weight: bold;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.loading-state text {
  font-size: 28rpx;
  color: #909399;
}

/* 预约规则 */
.rules-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 120rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.rules-content {
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.rules-content text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 底部按钮 */
.bottom-button {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.submit-btn {
  background-color: #409eff;
  color: #fff;
  border-radius: 8rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
}

.submit-btn[disabled] {
  background-color: #a0cfff;
  color: #fff;
} 