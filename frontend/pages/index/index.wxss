/* pages/index/index.wxss */
.container {
  padding-bottom: 30rpx;
}

/* 用户栏 */
.user-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.nickname {
  font-size: 28rpx;
  color: var(--font-color);
}

.notification .icon {
  width: 50rpx;
  height: 50rpx;
}

/* 轮播图 */
.banner {
  width: 100%;
  height: 350rpx;
  margin-bottom: 30rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

.banner-title {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  text-shadow: 0 0 10rpx rgba(0, 0, 0, 0.5);
}

/* 统计数据 */
.statistics {
  display: flex;
  justify-content: space-around;
  margin: 20rpx 30rpx 40rpx;
  background-color: #fff;
  border-radius: 15rpx;
  padding: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 0;
  flex: 1;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: var(--font-color-light);
}

/* 快捷菜单 */
.quick-menu {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx 40rpx;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 22%;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 15rpx;
}

.menu-text {
  font-size: 24rpx;
  color: var(--font-color);
}

/* 通用Section样式 */
.section {
  margin: 0 30rpx 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--font-color);
}

.more-link {
  font-size: 24rpx;
  color: var(--font-color-lighter);
}

/* 自习室列表 */
.study-room-list {
  display: flex;
  flex-direction: column;
}

.study-room-item {
  display: flex;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.room-image {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.room-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.room-name {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--font-color);
  margin-bottom: 10rpx;
}

.room-location {
  font-size: 24rpx;
  color: var(--font-color-light);
  margin-bottom: 20rpx;
}

.room-detail {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: var(--font-color-lighter);
}

.room-seats {
  color: var(--primary-color);
}

/* 预约列表 */
.reservation-list {
  display: flex;
  flex-direction: column;
}

.reservation-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.reservation-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.reservation-status {
  color: var(--primary-color);
  font-size: 26rpx;
}

.reservation-detail {
  font-size: 24rpx;
  color: var(--font-color-light);
}

.detail-item {
  margin-bottom: 8rpx;
} 