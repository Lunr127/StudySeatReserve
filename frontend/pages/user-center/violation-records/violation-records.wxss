.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  background-color: white;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 违约记录列表 */
.violation-list {
  padding: 20rpx;
}

.violation-item {
  background-color: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.violation-item:active {
  background-color: #f8f9fa;
}

.violation-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.violation-type {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: white;
}

.type-no-show {
  background-color: #e74c3c;
}

.type-late {
  background-color: #f39c12;
}

.type-early-leave {
  background-color: #9b59b6;
}

.violation-time {
  font-size: 24rpx;
  color: #999;
}

.violation-content {
  margin-bottom: 20rpx;
}

.room-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.room-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.seat-number {
  font-size: 26rpx;
  color: #666;
}

.reservation-time {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.violation-desc {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.violation-actions {
  display: flex;
  justify-content: flex-end;
}

.appeal-btn {
  padding: 12rpx 24rpx;
  background-color: #3A7AF2;
  color: white;
  border-radius: 20rpx;
  font-size: 26rpx;
}

.appeal-btn:active {
  background-color: #2968d9;
}

/* 加载更多 */
.loading-more, .no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
}

.loading-text, .no-more-text {
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 50rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.empty-tips {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
} 