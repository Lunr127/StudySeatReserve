.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  background-color: white;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 收藏列表 */
.favorite-list {
  padding: 20rpx;
}

.favorite-item {
  background-color: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.favorite-item:active {
  background-color: #f8f9fa;
}

.favorite-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.favorite-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f0f8ff;
  border-radius: 40rpx;
}

.favorite-icon .icon {
  width: 40rpx;
  height: 40rpx;
}

.favorite-info {
  flex: 1;
}

.favorite-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.favorite-subtitle {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.favorite-time {
  font-size: 24rpx;
  color: #999;
}

.remove-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffe6e6;
  border-radius: 30rpx;
  margin-left: 20rpx;
}

.remove-btn:active {
  background-color: #ffcccc;
}

.remove-icon {
  width: 30rpx;
  height: 30rpx;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 50rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.empty-tips {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
  line-height: 1.5;
} 