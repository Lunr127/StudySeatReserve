/* login.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100vh;
  padding: 60rpx 30rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 80rpx;
}

.login-container {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}

.form-container {
  width: 100%;
}

.input-group {
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  padding: 20rpx;
  border: 1px solid #eee;
}

.input {
  height: 80rpx;
  font-size: 30rpx;
}

.login-btn {
  background-color: #3b82f6;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin-top: 40rpx;
  font-weight: normal;
}

.wx-login-btn {
  background-color: #07c160;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx;
  font-weight: normal;
}

.wx-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.switch-login-type {
  text-align: center;
  font-size: 28rpx;
  color: #3b82f6;
  margin-top: 30rpx;
}

.footer {
  width: 100%;
  margin-bottom: 60rpx;
}

.agreement {
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

.link {
  color: #3b82f6;
} 