.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 自习室信息 */
.room-info {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.room-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.room-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.room-details text {
  font-size: 28rpx;
  color: #666;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20rpx;
}

.filter-btn {
  font-size: 28rpx;
  padding: 12rpx 24rpx;
  background-color: #fff;
  border-radius: 8rpx;
  color: #333;
  border: 1rpx solid #ddd;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.filter-btn .iconfont {
  margin-right: 8rpx;
}

/* 座位列表 */
.seat-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  justify-content: space-between;
}

.seat-row {
  width: 48%;
}

.seat-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.seat-item.available {
  background-color: #f0f9eb;
  border-color: #e1f3d8;
}

.seat-item.unavailable {
  background-color: #f8f8f8;
  border-color: #eee;
  opacity: 0.7;
}

.seat-item.selected {
  border-color: #409eff;
  background-color: #ecf5ff;
}

.seat-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.seat-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.tag.power {
  background-color: #f0f9eb;
  color: #67c23a;
}

.tag.window {
  background-color: #ecf5ff;
  color: #409eff;
}

.tag.corner {
  background-color: #fdf6ec;
  color: #e6a23c;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #909399;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.loading-state text {
  font-size: 28rpx;
  color: #909399;
}

/* 筛选弹窗 */
.filter-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.filter-modal.show {
  opacity: 1;
  visibility: visible;
}

.filter-content {
  width: 80%;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.filter-header {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.filter-header text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #909399;
}

.filter-body {
  padding: 24rpx;
}

.filter-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.filter-item:last-child {
  border-bottom: none;
}

.filter-label {
  font-size: 28rpx;
  color: #333;
}

.filter-footer {
  display: flex;
  padding: 24rpx;
  border-top: 1rpx solid #eee;
}

.btn-reset, .btn-apply {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.btn-reset {
  background-color: #f5f5f5;
  color: #666;
  margin-right: 20rpx;
}

.btn-apply {
  background-color: #409eff;
  color: #fff;
} 