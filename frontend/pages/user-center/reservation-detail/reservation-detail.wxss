 /* 全局容器 */
.container {
  padding: 0 30rpx 50rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-btn image {
  width: 40rpx;
  height: 40rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-left: 20rpx;
  color: #333;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3A7AF2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 预约状态卡片 */
.reservation-status-card {
  width: 100%;
  padding: 40rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  color: #ffffff;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.status-text {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.status-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 状态颜色 */
.status-cancelled {
  background: linear-gradient(135deg, #999999 0%, #666666 100%);
}

.status-pending {
  background: linear-gradient(135deg, #faad14 0%, #f5a623 100%);
}

.status-using {
  background: linear-gradient(135deg, #3A7AF2 0%, #5B8CFF 100%);
}

.status-completed {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
}

.status-violated {
  background: linear-gradient(135deg, #f5222d 0%, #cf1322 100%);
}

/* 信息卡片 */
.info-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  border-bottom: 1px solid #e8e8e8;
  padding-bottom: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 20rpx;
}

.info-label {
  width: 180rpx;
  color: #666;
  font-size: 28rpx;
}

.info-value {
  flex: 1;
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

/* 座位特性 */
.seat-features {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0.5;
}

.feature-item.active {
  opacity: 1;
}

.feature-item image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.feature-item text {
  font-size: 24rpx;
  color: #666;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  margin-top: 40rpx;
}

.action-btn {
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  color: #fff;
  flex: 1;
  max-width: 300rpx;
}

.action-btn.check-in {
  background-color: #3A7AF2;
}

.action-btn.cancel {
  background-color: #999999;
}

.action-btn.extend {
  background-color: #faad14;
}

/* 错误提示 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 600rpx;
}

.error-container image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.error-container text {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.retry-btn {
  background-color: #3A7AF2;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 60rpx;
  border-radius: 12rpx;
}