/* edit.wxss */
.container {
  padding: 30rpx;
  background-color: var(--background-color);
  min-height: 100vh;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: var(--font-color);
}

/* 表单容器 */
.form-container {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 表单分区 */
.form-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: var(--font-color);
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 30rpx;
  background-color: var(--primary-color);
  border-radius: 4rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  color: var(--font-color);
}

.required {
  color: var(--error-color);
  margin-left: 5rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.textarea-counter {
  text-align: right;
  font-size: 24rpx;
  color: var(--font-color-lighter);
  margin-top: 10rpx;
}

/* 选择器 */
.picker {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-arrow {
  width: 30rpx;
  height: 30rpx;
}

/* 时间选择器 */
.time-picker-container {
  display: flex;
  align-items: center;
}

.time-picker {
  flex: 1;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.time-separator {
  margin: 0 20rpx;
  color: var(--font-color-light);
}

/* 提交按钮 */
.form-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 60rpx;
}

.btn-cancel, .btn-submit {
  width: 45%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: var(--font-color-light);
}

.btn-submit {
  background-color: var(--primary-color);
  color: #ffffff;
} 