.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-section {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-right: 20rpx;
}

.user-details {
  flex: 1;
}

.username {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-type {
  font-size: 26rpx;
  color: #666;
}

/* 设置区域 */
.settings-section, .actions-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 30rpx 10rpx;
}

.settings-list, .actions-list {
  background-color: white;
  border-radius: 16rpx;
  margin: 0 20rpx;
  overflow: hidden;
}

.setting-item, .action-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.setting-item:last-child, .action-item:last-child {
  border-bottom: none;
}

.setting-item:active, .action-item:active {
  background-color: #f8f9fa;
}

.setting-content, .action-content {
  flex: 1;
}

.setting-title, .action-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.setting-subtitle, .action-subtitle {
  font-size: 24rpx;
  color: #999;
}

.setting-arrow, .action-arrow {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-icon {
  width: 20rpx;
  height: 20rpx;
  opacity: 0.6;
} 